
@model List<MVC.Models.VehicleMakeVM>

<h1>Vehicle Makes</h1>
<div asp-validation-summary="All" class="text-danger"></div>
<br/>
<form method="get" asp-controller="VehicleMake" asp-action="Index">


    <label>Page Size:</label>
    <input type="number" name="pageSize" value="@ViewData["PageSize"]" min="1" max="100" />
    <button type="submit">Update</button>


    <form method="get" asp-controller="VehicleMake" asp-action="Index">


    <div class="form-group">
        <label for="searchQuery">Search by name:</label>
        <input type="text" class="form-control" id="searchQuery" name="searchQuery" value="@ViewData["SearchQuery"]" placeholder="Enter name" />
    </div>


    <div class="form-group">
        <label for="sortBy">Sort by:</label>
            <select class="form-control" id="sortOrder" name="sortOrder">
                <option value="asc" selected="@(ViewData["SortOrder"]?.ToString() == "asc" ? "selected" : "")">Ascending</option>
                <option value="desc" selected="@(ViewData["SortOrder"]?.ToString() == "desc" ? "selected" : "")">Descending</option>
            </select>
            <br />
            <select class="form-control" id="sortBy" name="sortBy">
                <option value="Name" selected="@(ViewData["SortBy"]?.ToString() == "Name")">Name</option>
                <option value="Abrv" selected="@(ViewData["SortBy"]?.ToString() == "Abrv")">Abbreviation</option>
                <option value="Id" selected="@(ViewData["SortBy"]?.ToString() == "Id")">ID</option>
            </select>

    </div>
        <br />
@*      <div class="form-group">
        <label for="sortOrder">Sort order:</label>
            <select asp-for="SortOrder" class="form-control">
                <option value="asc" selected="@(ViewData["SortOrder"]?.ToString() == "asc" ? "selected" : "")">Ascending</option>
                <option value="desc" selected="@(ViewData["SortOrder"]?.ToString() == "desc" ? "selected" : "")">Descending</option>
            </select>
    </div>*@
    <button type="submit" class="btn btn-primary">Search</button>
</form>
</form>
<br/>
<a asp-controller="VehicleMake" asp-action="Create" class="btn btn-primary">Create</a>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Abbreviation</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var make in Model)
        {
            <tr>
                <td>@make.Id</td>
                <td>@make.Name</td>
                <td>@make.Abrv</td>
                <td>


                    <a asp-controller="VehicleMake" asp-action="Edit" asp-route-id="@make.Id">Edit</a>


                    <form asp-controller="VehicleMake" asp-action="Delete" asp-route-id="@make.Id" method="post" onsubmit="return confirm('You sure?')">
                        <button type="submit">Delete</button>
                    </form>
                    @*<a asp-controller="VehicleMake" asp-action="Delete" asp-route-id="@make.Id" >Delete</a> ***** ne radi bez submita *@

                </td>
            </tr>
        }
    </tbody>
</table>
