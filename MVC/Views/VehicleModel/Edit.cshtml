@using Service.Models.DTOs;
@model VehicleModelDTO;



<h1>Edit Vehicle Model</h1>

<form asp-controller="VehicleModel" asp-action="Update" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Abrv" class="control-label"></label>
        <input asp-for="Abrv" class="form-control" />
        <span asp-validation-for="Abrv" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MakeName" class="control-label"></label>
        <select asp-for="MakeId" asp-items="@(ViewBag.Makes)" class="form-control">
            <option value="">-- Select Make --</option>
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
    <input type="hidden" asp-for="Id" />
</form>
