@using Service.Models.DTOs;
@model VehicleModelDTO;

<h1>Insert New Vehicle Model</h1>

<form asp-controller="VehicleModel" asp-action="AddModel" method="post">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name="Name" placeholder="Enter name" required>
    </div>
    <div class="form-group">
        <label for="abrv">Abbreviation</label>
        <input type="text" class="form-control" id="abrv" name="Abrv" placeholder="Enter abbreviation" required>
    </div>
    <div class="form-group">
        <label asp-for="MakeName" class="control-label"></label>
        <select asp-for="MakeName" asp-items="@(ViewBag.Makes)" class="form-control">
            <option value="">-- Select Make --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
