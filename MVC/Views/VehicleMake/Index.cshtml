@model List<MVC.Models.VehicleMakeVM>

<h1>Vehicle Makes</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Abbreviation</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
    if (Model != null && Model.Any())
    {
        @foreach (var make in Model)
        {
            <tr>
                <td>@make.Name</td>
                <td>@make.Abrv</td>
                <td>
                    <a asp-controller="VehicleMake" asp-action="Edit" asp-route-id="@make.Id">Edit</a>
                    <a asp-controller="VehicleMake" asp-action="Delete" asp-route-id="@make.Id">Delete</a>
                </td>
            </tr>
        }
    }else{ <tr> No data to display </tr>
    </tbody>
</table>
