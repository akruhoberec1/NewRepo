@using Service.Models.DTOs;
@model VehicleMakeDTO

<h1>Create New Vehicle Make</h1>

<form asp-controller="VehicleMake" asp-action="AddMake" method="post">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name="Name" placeholder="Enter name" required>
    </div>
    <div class="form-group">
        <label for="abrv">Abbreviation</label>
        <input type="text" class="form-control" id="abrv" name="Abrv" placeholder="Enter abbreviation" required>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
